                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.EquipmentStatus)
                    </td>

                    <td>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">

                            <input type="submit" class="btn btn-success btn-sm" value=" Edit  " onclick="location.href='@Url.Action("Edit", new { id = item.equipId })'" /> &nbsp;
                            <input type="submit" class="btn btn-info btn-sm" value="Details" onclick="location.href='@Url.Action("Details", new { id = item.equipId })'" /> &nbsp;
                            <input type="submit" class="btn btn-danger btn-sm" value="  Delete  " onclick="location.href='@Url.Action("Delete", new { id = item.equipId })'" />

